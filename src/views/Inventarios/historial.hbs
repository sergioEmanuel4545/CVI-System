<div class="container-fluid">
    <div class="row">
        {{>sidebar}}
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

            <div class="card">
                <div class="card-header">
                    <h3>Existencias Archivadas</h3>

                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active">Lista</a>
                        </li>
                    </ul>
                </div>
                <div class="card_body">
                    <div class="table-responsive table-bordered">
                        <table class="table table-striped table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>NÂº</th>
                                    <th>Lote ID</th>
                                    <th>MoPo</th>
                                    <th>Producto Terminado</th>
                                    <th>Cantidad</th>
                                    <th>Fecha de ingreso</th>
                                    <th>Fecha de vencimiento</th>
                                    <th>Descripcion</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each listaExistenciasArchivadas}}
                                <ol>
                                    <tr>
                                        <td>{{contador}}</td>
                                        <td>{{CodeLoteId}}</td>
                                        <td>{{ingresoMoPo}}</td>
                                        <td>{{ingresoProducto}}</td>
                                        <td> {{ingresoCantidad}} </td>
                                        <td>{{fechaDeIngreso}}</td>
                                        <td>{{fechaVencimientoIngreso}}</td>
                                        <td>{{descripcionIngreso}}</td>
                                    </tr>
                                </ol>

                                {{else}}
                                <tr>
                                    <td> </td>
                                    <td> </td>
                                    <td> </td>
                                    <td> </td>
                                    <td> </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
        </main>
    </div>
</div>
</div>
</div>
</main>


