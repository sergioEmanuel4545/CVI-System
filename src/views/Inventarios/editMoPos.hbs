<div class="container-fluid">
    <div class="row">
{{>sidebar}}
<div class="col-sm-7 mx-auto">
<div class="card">
    <div class="card_header">
        <h3>Actualización de Materia Prima</h3>        
    </div>
    <div class="card_body">
        <form action ="/mopos/editMoPo/{{mopo._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
            <div class="form-group row">              
                <label  class="col-sm-3 col-form-label text-sm-center">Nombre</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="nombreMoPo" class="form-control" value="{{mopo.nombreMoPo}}" 
                    >                   
                </div>
            </div>
            <div class="form-group row">
                <label for="inputState" class="col-sm-3 col-form-label text-sm-center">Categoria</label>
            <div class="col-sm mx-auto">
                <select id="inputState" class="form-control" name="seleccionCategoria" placeholder="{{mopo.seleccionCategoria}}">
                    <option >{{mopo.seleccionCategoria}}</option>
                    {{#each listaCategorias}}
                    <option >{{nombreCategoria}}</option>
                    {{/each}}
                </select>
            </div>
        </div>               
            </div>
            <div class="form-group">
                <textarea name="descripcionMoPo" class="form-control">
                    {{mopo.descripcionMoPo}}
                </textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar Actualización
                </button>
            </div>
        </form>
    </div>
</div>
</div> 
</div>
</div> 


