    <div class="modal fade" id="modalCATEGORIA" tabindex="-1" role="dialog" aria-labelledby="modalCATEGORIALabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalCATEGORIALabel">Categoria Nueva</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action ="/categorias/add" method="POST">          
          <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Nombre</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="nombreCategoria" class="form-control" placeholder="" id="inputname1" value="{{nombreCategoria}}"
                    autofocus>                   
                </div>
            </div>
            <div class="form-group">
                <textarea name="descripcionCategoria" class="form-control"
                placeholder="Informacion adicional" >{{descripcionCategoria}}</textarea>
            </div>
        <div class="modal-footer">
             <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
             <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar nueva categoria
                </button>
             </div>
        </div>
        </form>
      </div>      
    </div>
  </div>
