<div class="container-fluid">
    <div class="row">
        {{>sidebar}}
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

            <div class="card">
                <div class="card-header">
                    <h3>Materia Prima</h3>

                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active">Lista</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link lead" href="" data-toggle="modal" data-target="#modalMOPO"><i
                                    class="fas fa-plus-circle"></i></a>
                        </li>
                    </ul>
                </div>
                <div class="card_body">
                    <div class="table-responsive table-bordered">
                        <table class="table table-striped table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>NÂº</th>
                                    <th>Nombre MoPo</th>
                                    <th>Categoria</th>
                                    <th>Descripcion</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each listaMoPos}}
                                <ol>
                                    <tr>
                                        <td>{{contador}}</td>
                                        <td>{{nombreMoPo}}</td>
                                        <td>{{seleccionCategoria}}</td>
                                        <td>{{descripcionMoPo}}</td>
                                        <td><a href="/mopos/edit/{{_id}}"><i class="fas fa-edit"></i></a></td>
                                    </tr>
                                </ol>

                                {{else}}
                                <tr>
                                    <td> </td>
                                    <td> </td>
                                    <td> </td>
                                    <td> </td>
                                    <td> </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
        </main>
    </div>
</div>
</div>
</div>
</main>


