<div class="modal fade" id="modalMOPO" tabindex="-1" role="dialog" aria-labelledby="modalMOPOLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalMOPOLabel">Materia Prima Nueva</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/mopos/add" method="POST">
                    <div class="form-group row">
                        <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Materia Prima</label>
                        <div class="col-sm mx-auto">
                            <input type="text" name="nombreMoPo" class="form-control" placeholder="" id="inputname1"
                                value="{{nombreMoPo}}" autofocus>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputState" class="col-sm-3 col-form-label text-sm-center">Categorias</label>
                        <div class="col-sm mx-auto">
                            <select id="inputState" class="form-control" name="seleccionCategoria">
                                <option>...</option>
                                {{#each listaCategorias}}
                                <option>{{nombreCategoria}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <textarea name="descripcionMoPo" class="form-control"
                            placeholder="Informacion adicional">{{descripcionMoPo}}</textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">
                                Guardar nueva Materia Prima
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</div>