{{>sidebar}}
<div class="col-sm-7 mx-auto">
<div class="card">
    <div class="card_header">
        <h3>Actualización de Categoria</h3>        
    </div>
    <div class="card_body">
        <form action ="/categorias/editCategoria/{{categoria._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
            <div class="form-group row">              
                <label  class="col-sm-3 col-form-label text-sm-center">Nombre</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="nombreCategoria" class="form-control" placeholder="{{categoria.nombreCategoria}}" 
                    >                   
                </div>
            </div>
            
            <div class="form-group">
                <textarea name="descripcionCategoria" class="form-control">
                    {{categoria.descripcionCategoria}}
                </textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar Actualización
                </button>
            </div>
        </form>
    </div>
</div>
</div> 


