<div class="modal fade" id="modalRepCompraCalendar" tabindex="-1" role="dialog"
    aria-labelledby="modalRepCompraCalendarLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalRepCompraCalendarLabel">Rango de Fechas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/reportes/compras/calendar" method="POST">

                    <div class="form-group row">
                        <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Fecha de
                            Inicio</label>
                        <div class="col-sm mx-auto">
                            <input type="date" name="fechaInicioRepCompra" class="form-control" placeholder=""
                                id="inputname1" value="{{fechaInicioRepCompra}}" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Fecha
                            Final</label>
                        <div class="col-sm mx-auto">
                            <input type="date" name="fechaFinalRepCompra" class="form-control" placeholder=""
                                id="inputname1" value="{{fechaFinalRepCompra}}" required>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">
                                Ingresar Rango de Fechas
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>