<div class="card">
    <div class="card-header">
        <h3>Reporte Compras y Ventas</h3>        
    <ul class="nav nav-pills card-header-tabs">
      <li class="nav-item">
        <a class="nav-link active" href="/reportes/compras">Compras</a>
      </li>
      <li class="nav-item">
        <a class="nav-link lead" href="/reportes/ventas">Ventas</a>
      </li>
    </ul>
  </div>
<div class="row">
    <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col ">
                            <div class="row justify-content-center"><h4>Total Proveedores</h4></div>
                            <div class="row justify-content-center"><h1><i class="fas fa-truck-loading fa-lg"></i></h1></div>
                        </div>
                        <div class="col col col-lg-4 text-center"><h1><span class="badge rounded-pill bg-info text-dark w-50 p-3">{{countProveedor}}</span></h1></div>
                    </div>
                </div>
            </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col ">
                        <div class="row justify-content-center">
                            <h4>Total Compras</h4>
                        </div>
                        <div class="row justify-content-center">
                            <h1><i class="fas fa-shopping-bag fa-lg"></i></h1>
                        </div>
                    </div>
                    <div class="col col col-lg-4 text-center">
                        <h1><span class="badge rounded-pill bg-info text-dark w-50 p-3">{{countCompra}}</span></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-body">
            <div class="row">
                <div class="col ">
                    <div class="row justify-content-center">
                        <h4>Prestamos Pendientes</h4>
                    </div>
                    <div class="row justify-content-center">
                        <h1><i class="fas fa-file-invoice-dollar fa-lg"></i></h1>
                    </div>
                </div>
                <div class="col col col-lg-4 text-center">
                    <h1><span class="badge rounded-pill bg-info text-dark w-50 p-3">{{countAcreedores}}</span></h1>
                </div>
            </div>
        </div>
    </div>
    
</div>
</div>
    </div>
</div>






