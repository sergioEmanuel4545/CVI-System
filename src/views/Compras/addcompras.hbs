<div class="col-sm-7 mx-auto">
<div class="card">
    <div class="card_header">
        <h3>Registro de Compra</h3>
    </div>
    <div class="card_body">
        <form action ="/compras/add" method="POST">
            <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Producto comprado</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="productoComprado" class="form-control" placeholder="" id="inputname1" value="{{productoComprado}}"
                    autofocus>                   
                </div>
            </div>           
            <div class="form-group row">
                <label for="inputState" class="col-sm-3 col-form-label text-sm-center">Proveedores</label>
                <div class="col-sm mx-auto">
                <select id="inputState" class="form-control" name="seleccionProveedor" >
                    <option >...</option>
                    {{#each listaProveedores}}
                    <option >{{nombre}}</option>
                    {{/each}}
                </select>
                </div>
            </div>
             <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Cantidad comprada [u]</label>
                <div class="col-sm mx-auto">
                <input type = "number" name="cantidadComprada" class="form-control" placeholder="" id="inputname1" value="{{cantidadComprada}}"
                    autofocus>                   
                </div>
            </div>
             <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Costo [Bs]</label>
                <div class="col-sm mx-auto">
                <input type = "number" name="costo" class="form-control" placeholder="" id="inputname1" value="{{costo}}"
                    autofocus>                   
                </div>
            </div>
            <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Fecha de compra</label>
                <div class="col-sm mx-auto">
                <input type = "datetime-local" name="fechaDeCompra" class="form-control" placeholder="" id="inputname1" value="{{fechaDeCompra}}"
                    autofocus>                   
                </div>
            </div>
             <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Â¿Al Contado?</label>
                <div class="col-sm mx-auto">
                <input type = "checkbox" name="alContado" class="form-control"  id="chbox2" onclick="enables(this);" value="">                   
                </div>
            </div>
            <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Monto Pagado [Bs]</label>
                <div class="col-sm mx-auto">
                <input type = "number" name="montoPagadoCompra" class="form-control" placeholder="" id="montoPagadoCompraText" value="{{montoPagadoCompra}}" style="display:">                   
                </div>
            </div>
            <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Fecha del siguiente Pago</label>
                <div class="col-sm mx-auto">
                <input type = "date" name="fechaDelSigPago" class="form-control" placeholder="" id="fechaDelSigPagoText" value="{{fechaDelSigPago}}" style="display:">                   
                </div> 
            </div>              
            <div class="form-group">
                <textarea name="descripcionCompra" class="form-control" placeholder="Informacion adicional: Productos que vende,telefonos,etc">{{descripcionCompra}}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </div>
        </form>
        <script type="text/javascript">
           function enables(obj){
               if (obj.checked){
                   document.getElementById("montoPagadoCompraText").style.display ="none";
                   document.getElementById("montoPagadoCompraText").value="";
                   document.getElementById("fechaDelSigPagoText").style.display ="none";
                   document.getElementById("fechaDelSigPagoText").value="";
                   document.getElementById("chbox2").value = true;
               }else{
                   document.getElementById("montoPagadoCompraText").style.display ="";
                   document.getElementById("fechaDelSigPagoText").style.display ="";
                   document.getElementById("chbox2").value = false;
               }
            }
        </script>
    </div>
</div>
</div> 



