<div class="col-sm-7 mx-auto">
<div class="card">
    <div class="card_header">
        <h3>Actualización de Proveedor</h3>
    </div>
    <div class="card_body">
        <form action ="/proveedores/editProveedor/{{proveedor._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
            <div class="form-group row">              
                <label  class="col-sm-3 col-form-label text-sm-center">Nombre</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="nombre" class="form-control" placeholder="{{proveedor.nombre}}" 
                    readonly>                   
                </div>
            </div>
             <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Nit</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="nit" class="form-control" placeholder="{{proveedor.nit}}" 
                    readonly>                   
                </div>
            </div>
             <div class="form-group row">              
                <label  class="col-sm-3 col-form-label text-sm-center">Contacto</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="contacto" class="form-control" placeholder="Contacto" value="{{proveedor.contacto}}" 
                    autofocus>                   
                </div>
            </div>
            <div class="form-group row">              
                <label  class="col-sm-3 col-form-label text-sm-center">Direccion</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="direccion" class="form-control" placeholder="" value="{{proveedor.direccion}}" 
                    autofocus>                   
                </div>
            </div>
            <div class="form-group">
                <textarea name="descripcion" class="form-control">
                    {{proveedor.descripcion}}
                </textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar Actualización
                </button>
            </div>
        </form>
    </div>
</div>
</div> 
