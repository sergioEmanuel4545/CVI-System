<div class="col-sm-7 mx-auto">
<div class="card">
    <div class="card_header">
        <h3>Creacion de Proveedor</h3>
    </div>
    <div class="card_body">
        <form action ="/proveedores/add" method="POST">
            <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Nombre</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="nombre" class="form-control" placeholder="" id="inputname1" value="{{nombre}}"
                    autofocus>                   
                </div>
            </div>
             <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Nit</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="nit" class="form-control" placeholder="" id="inputname1" value="{{nit}}"
                    autofocus>                   
                </div>
            </div>
             <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Contacto</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="contacto" class="form-control" placeholder="" id="inputname1" value="{{contacto}}"
                    autofocus>                   
                </div>
            </div>
            <div class="form-group row">              
                <label for="inputname1" class="col-sm-3 col-form-label text-sm-center">Direccion</label>
                <div class="col-sm mx-auto">
                <input type = "text" name="direccion" class="form-control" placeholder="" id="inputname1" value="{{direccion}}"
                    autofocus>                   
                </div>
            </div>
            <div class="form-group">
                <textarea name="descripcion" class="form-control"
                placeholder="Informacion adicional: Productos que vende,telefonos,etc" >{{descripcion}}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
</div> 

